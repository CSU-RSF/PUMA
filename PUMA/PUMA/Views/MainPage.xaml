<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:local="clr-namespace:PUMA;assembly=PUMA"
					   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
					   x:Class="PUMA.MainPage"
             Padding="0"
             Title="Pumas">

  <ContentPage.Content>  
    <AbsoluteLayout>
      <Image Source="{local:ImageResource PUMA.Resources.Images.background.png}" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" Aspect="AspectFill" />
      <StackLayout Spacing="15" Orientation="Vertical" VerticalOptions="Center" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds=".5,1,.8,1">
        <Button Text="Introduction" Clicked="ToIntroduction" BackgroundColor="#77000000" TextColor="White" BorderRadius="5" />
        <Button Text="Puma Types" Clicked="ToPumaTypes" BackgroundColor="#77000000" TextColor="White" BorderRadius="5" />
        <Button Text="Habitats (Maps)" Clicked="ToPumaHabitats" BackgroundColor="#77000000" TextColor="White" BorderRadius="5" />
      </StackLayout>
    </AbsoluteLayout>
  </ContentPage.Content>
</ContentPage>